#!/bin/bash

RED='\E[1;31m'
YELLOW='\E[1;33m'
GREEN='\E[1;32m'
BLUE='\E[1;34m'
RESET='\E[0m'

# Yum cleaning
sudo yum clean all
sudo rm -rf /var/cache/yum

## Build Spec
echo -e "${YELLOW}‚ùØ ${GREEN}Building ${WHITE}$* ${GREEN}...${spec} ${RESET}"

for spec in "$@"
do
    sudo yum-builddep -y $skip_broken "${spec}"
    rc=$?; if [[ $rc != 0 ]]; then exit $rc; fi

    spectool -g -R "${spec}"
    rc=$?; if [[ $rc != 0 ]]; then exit $rc; fi

    rpmbuild --clean -ba "${spec}"
    rc=$?; if [[ $rc != 0 ]]; then exit $rc; fi
done
